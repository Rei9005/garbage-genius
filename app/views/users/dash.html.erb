<div class="banner">
  <div class="button-group text-end">
    <%#= link_to "Garbage Truck Map", "#", class: "btn btn-ghost" %>
    <%# <button>ETA Analysis</button> %>
    <%# <button onclick="window.location.href='= edit_user_path(current_user)'">Change Settings</button> %>
    <%= link_to "Change Settings", edit_user_path(current_user), class: "btn btn-ghost" %>
    <%= link_to "map", spots_path(current_user), class: "btn btn-ghost" %>
    <div class="button-group">
    </div>
  </div>
  <%# Next Garbage Collection Banner %>
  <% next_garbage_collection = @spot_details.find { |spot_detail| spot_detail.date >= Date.today } %>
  <% if next_garbage_collection %>
    <% day_before_next_collection = next_garbage_collection.date - 1.day %>
    <div class="bar-banner">
      <p>Next Garbage Date/Time/Type:
        <%= day_before_next_collection.strftime("%B %-d, %Y") %> at
        <%= next_garbage_collection.scheduled_time.strftime("%I:%M %p") %> -
        <%= case next_garbage_collection.collection_type
            when "C"
              "Combustible"
            when "GCM"
              "Glass, Ceramic, and Metallic"
            when "RP"
              "Recyclable Plastics"
            when "UPBBC"
              "Used Paper, Plastic Bottles, Bottles, Cans"
            else
              "Unknown"
            end %>
      </p>
    </div>
  <% else %>
    <div class="bar-banner">
      <p>No upcoming garbage collection scheduled.</p>
    </div>
  <% end %>
</div>
<!-- Calendar -->
<div class="calendar mt-3">
  <%= week_calendar(number_of_days: 14, start_date_param: :my_date, events: @spot_details, attribute: :date) do |date, spot_details| %>
    <%= date.strftime("%b %-d")  %>
    <p></p>
    <% if date == Date.today  %>
      <h2>Today</h2>
    <% end  %>
    <% spot_details.each do |spot_detail| %>
      <div class="spot_detail">
        <% if spot_detail.collection_type == "C" %>
          <p><%= spot_detail.scheduled_time.strftime('%H:%M') %></p>
          <p></p>
          <i class="fa-solid fa-fire <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <p></p>
          <p><%= 'Combustible' %></p>
        <% elsif spot_detail.collection_type == "GCM"%>
          <p><%= spot_detail.scheduled_time.strftime('%H:%M') %></p>
          <p></p>
          <i class="fa-solid fa-champagne-glasses <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>>
          <i class="fa-solid fa-mug-saucer <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>>
          <i class="fa-solid fa-faucet <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <p></p>
          <p><%= 'Glass, Ceramic and Metallic' %></p>
          <p></p>
        <% elsif spot_detail.collection_type == "RP"%>
          <p><%= spot_detail.scheduled_time.strftime('%H:%M') %></p>
          <p></p>
          <i class="fa-solid fa-recycle <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <p></p>
          <p><%= 'Recyclable plastics' %></p>
        <% elsif spot_detail.collection_type == "UPBBC"%>
          <p><%= spot_detail.scheduled_time.strftime('%H:%M') %></p>
          <p></p>
          <i class="fa-regular fa-newspaper <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <i class="fa-solid fa-bottle-water <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <i class="fa-solid fa-wine-bottle <%= date == Date.today ? "fa-beat " : ""%> <%= date == (Date.today + 1) ? "fa-bounce " : ""%>fa-2xl"></i>
          <p></p>
          <p><%= 'Used paper, Plastic bottles, Bottles, Cans' %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</body>
</html>
<!-- Alert Settings -->
<div class="alert-settings">
  <h2>Current Alert Settings</h2>
  <div class="alert-item">
    <p>Alert 1: Day Before Pickup</p>
    <% if current_user.evening_alert_at.present? %>
      <p><%= current_user.evening_alert_at.strftime("%I:%M %p") %></p>
    <% else %>
      <p>No evening alert set</p>
    <% end %>
  </div>
  <div class="alert-item">
    <p>Alert 2: Day of Pickup</p>
    <% if current_user.morning_alert_at.present? %>
      <p><%= current_user.morning_alert_at.strftime("%I:%M %p") %></p>
    <% else %>
      <p>No morning alert set</p>
    <% end %>
  </div>
</div>
<!-- Change Settings Button -->
<div class="change-settings-btn">
  <%= link_to "Change Settings", edit_user_path(current_user), class: "btn btn-ghost" %>
</div>
</body>
</html>

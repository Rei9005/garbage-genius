<div class="container">
  <h2 class="sign-up-title">Sign Up</h2>
  <p class="sing-up-subtitle">Please fill in this form to create an account.</p>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
      <%= f.input :name,
                required: true,
                input_html: { autocomplete: "name" } %>
      <%= f.input :line_id,
                required: true,
                input_html: { autocomplete: "line_id" } %>
      <%= f.input :address %>
        <%# # input_html: {data: {address_autocomplete_target: "address"}, class: "d-none form-control"},
        # wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>

    </div>
    <div class="Privacy-policy">
      <p>By signing up to create an account I accept Companyâ€™s Terms of Use and Privacy Policy.</p>
      <p><strong>Copyright 2024 Garbage Genius.  All rights reserved </strong></p>
    </div>
    <div class="form-actions">
      <%= f.submit "Sign up", class:"btn-signup"%>
    </div>
  <% end %>
</div>
